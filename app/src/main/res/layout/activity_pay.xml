<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_pay"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="meijia.com.meijianet.ui.PayActivity">
    <include layout="@layout/comment_defout_toolbar"/>
    <View
        android:background="@color/hint_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_ac_pay_name"
            android:layout_marginLeft="20dp"
            android:hint="请输入您的真实姓名"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/hint_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:padding="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_ac_pay_phone"
            android:layout_marginLeft="20dp"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/hint_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>





    <TextView
        android:id="@+id/tv_ac_pay_sure"
        android:textColor="@color/white"
        android:background="#048F4B"
        android:layout_marginTop="50dp"
        android:text="预约看房"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
</LinearLayout>
