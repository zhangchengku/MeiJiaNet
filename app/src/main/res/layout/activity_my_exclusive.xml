<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_my_entrust"
    android:orientation="vertical">
    <include layout="@layout/comment_toolbar_menu"/>
    <View
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_ac_chezhu_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_width="@dimen/view_size_166"
            android:layout_height="@dimen/view_size_183"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_size_65"
            android:background="@mipmap/entrust_success" />
        <LinearLayout
            android:layout_marginTop="@dimen/view_size_33"
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_empty"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="委托发布成功！"
                android:textColor="#131313"
                android:textSize="@dimen/text_size_15" />
            <LinearLayout
                android:layout_marginTop="@dimen/view_size_19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="可以在"
                    android:textColor="#131313"
                    android:textSize="@dimen/text_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“我的委托”"
                    android:textColor="#4DD391"
                    android:textSize="@dimen/text_size_15"/>
                <TextView
                    android:text="中查看"
                    android:textColor="#131313"
                    android:textSize="@dimen/text_size_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/view_size_52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jxfb"
                android:layout_width="@dimen/view_size_122"
                android:layout_height="@dimen/view_size_39"
                android:layout_marginRight="@dimen/view_size_28"
                android:background="#07914E"
                android:gravity="center"
                android:text="继续发布"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/wdwt"
                android:layout_width="@dimen/view_size_122"
                android:layout_height="@dimen/view_size_39"
                android:layout_marginLeft="@dimen/view_size_28"
                android:background="#07914E"
                android:gravity="center"
                android:text="我的委托"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>