<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/img_my_bg">

                <ImageView
                    android:id="@+id/iv_fm_my_set"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/nav_icon_setting_default"/>

                <TextView
                    android:id="@+id/tv_fm_my_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_fm_my_set"
                    android:layout_marginLeft="15dp"
                    android:text="登录/注册"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/import_color"
                    android:textSize="22sp"/>

                <FrameLayout
                    android:background="@mipmap/mine_headportrait"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/iv_fm_my_set"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_fm_my_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_defoult"
                        app:riv_corner_radius="120dp"/>
                </FrameLayout>



                <TextView
                    android:id="@+id/tv1"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_fm_my_nickname"
                    android:layout_marginTop="50dp"
                    android:drawableLeft="@mipmap/mine_icon_footstep"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#fefefe"
                    android:text="足迹"/>

                <TextView
                    android:id="@+id/tv_fm_my_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_fm_my_nickname"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="12sp"
                    android:textColor="#fefefe"
                    android:layout_toRightOf="@id/tv1"
                    android:drawableLeft="@mipmap/mine_icon_collect"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="收藏"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:drawableLeft="@mipmap/shape_line"
                    android:drawablePadding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房源管理"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/import_color"
                    android:textSize="16sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_fm_my_weituo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:drawableTop="@mipmap/mine_icon_delegation_default"
                        android:text="我的委托"
                        android:drawablePadding="10dp"
                        android:textColor="@color/import_color"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_fm_my_yixiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/tv_fm_my_weituo"
                        android:drawableTop="@mipmap/mine_icon_intention_default"
                        android:text="意向房源"
                        android:drawablePadding="10dp"
                        android:textColor="@color/import_color"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:orientation="vertical">

            <TextView
                android:drawableLeft="@mipmap/shape_line"
                android:drawablePadding="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="必备工具"
                android:layout_marginLeft="15dp"
                android:textColor="@color/import_color"
                android:textSize="16sp"/>

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:text="必备工具"-->
                <!--android:textSize="18sp"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daikuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/mine_icon_calculator_default"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/normal_color"
                    android:drawablePadding="10dp"
                    android:text="贷款计算器"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_lvshi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/mine_icon_lawyer_default"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/normal_color"
                    android:drawablePadding="10dp"
                    android:text="专属律师"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tv_biaozhun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/mine_icon_charge_default"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/normal_color"
                    android:drawablePadding="10dp"
                    android:text="收费标准"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/tv_zhengming"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/mine_icon_income_default"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/normal_color"
                    android:drawablePadding="10dp"
                    android:text="收入证明"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>