<?xml version="1.0" encoding="utf-8"?>
<!--房源列表条目-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_item_fangyuan"
        android:layout_width="125dp"
        android:layout_height="115dp"
        android:layout_marginLeft="14dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="14dp"
        android:layout_toRightOf="@id/iv_item_fangyuan">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_fangyuan_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="首府小区"
                android:textColor="@color/import_color"
                android:textSize="14sp"/>


        </LinearLayout>
<LinearLayout
    android:layout_marginTop="8sp"
    android:layout_below="@id/ll"
    android:id="@+id/ll2"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_fangyuan_msg"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:text="四室两厅一卫 . 62"
        android:textColor="#999999"/>
    <TextView
        android:id="@+id/tv_item_fangyuan_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52"
        android:textSize="17sp"
        android:textColor="#F44848"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="万元"
    android:textSize="11sp"
    android:textColor="#333333"/>
</LinearLayout>
        <TextView
            android:id="@+id/tv_item_fangyuan_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll2"
            android:layout_marginTop="8dp"
            android:drawableLeft="@mipmap/icon_location"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#999999"
            android:text="北京市大兴区"/>

        <RelativeLayout
            android:id="@+id/rl_item_fangyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_item_tedian"
                android:padding="5dp"
                android:text="小高层"
                android:textColor="#FF9915"/>

            <TextView
                android:id="@+id/tv1"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_intention"
                android:drawablePadding="5dp"
                android:text="25"/>

            <TextView
                android:id="@+id/tv2"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/tv1"
                android:drawableLeft="@mipmap/icon_view"
                android:drawablePadding="5dp"
                android:text="25"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_below="@id/iv_item_fangyuan"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color"/>

</RelativeLayout>