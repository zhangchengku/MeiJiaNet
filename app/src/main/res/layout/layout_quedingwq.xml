<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_rigest"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#048F4B"
    tools:context="meijia.com.meijianet.ui.RigestActivity">
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_ac_regist_finish"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/nav_icon_cancel_white"
            android:layout_width="10dp"
            android:layout_height="17dp"/>
        <TextView
            android:textColor="@color/color_white"
            android:text="确认密码"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_ac_forget_psw"
        style="@style/et_style"
        android:hint="请输入6-12位数字或字母新密码"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:maxLength="12"
        android:textSize="14sp"
        android:textColor="#C0FDE7"
        android:textColorHint="#C0FDE7"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_ac_forget_psws"
        style="@style/et_style"
        android:hint="请确认密码"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:maxLength="12"
        android:textSize="14sp"
        android:textColor="#C0FDE7"
        android:textColorHint="#C0FDE7"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/tv_ac_forget_complete"
        android:layout_marginTop="50dp"
        android:text="完成"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="#048F4B"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"/>
</LinearLayout>
