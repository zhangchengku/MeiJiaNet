<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="15dp"
              android:clickable="true"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <meijia.com.srdlibrary.liushibuju.TagLayout
        android:id="@+id/tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="自定义："
            android:textColor="@color/import_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_zuidi"
            android:textColorHint="@color/hint_color"
            android:inputType="number"
            android:hint="最低"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/bg_item_city_normal"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <View
            android:background="@color/hint_color"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="10dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/et_zuigao"
            android:textColorHint="@color/hint_color"
            android:hint="最高"
            android:inputType="number"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/bg_item_city_normal"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <TextView
            android:padding="10dp"
            android:textColor="@color/import_color"
            android:text="万"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:textColor="@color/white"
            android:text="确定"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@mipmap/btn_confirm_small"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>