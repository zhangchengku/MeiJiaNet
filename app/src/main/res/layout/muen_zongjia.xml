<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:clickable="true"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="19dp"
        android:layout_marginLeft="18dp"
        android:textSize="15sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="区域价格（万）"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_marginLeft="18dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_zuidi"
            android:textColorHint="@color/hint_color"
            android:inputType="number"
            android:hint="最低"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/bg_item_city_normal"
            android:layout_width="152dp"
            android:layout_height="29dp"/>
        <View
            android:background="@color/hint_color"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="6dp"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/et_zuigao"
            android:textColorHint="@color/hint_color"
            android:hint="最高"
            android:inputType="number"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/bg_item_city_normal"
            android:layout_width="152dp"
            android:layout_height="29dp"/>
    </LinearLayout>
    <meijia.com.srdlibrary.liushibuju.TagLayout
        android:id="@+id/tag_layout"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5"
        />
    <LinearLayout
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_buxian"
            android:textColor="#666666"
            android:text="不限条件"
            android:gravity="center"
            android:layout_marginLeft="19dp"
            android:background="#F5F5F5"
            android:textSize="14sp"
            android:layout_width="154dp"
            android:layout_height="40dp"/>
        <TextView

            android:layout_marginLeft="14dp"
            android:id="@+id/tv_confirm"
            android:textColor="@color/white"
            android:text="确定"
            android:gravity="center"
            android:background="@mipmap/btn_confirm_small"
            android:textSize="14sp"
            android:layout_width="154dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>