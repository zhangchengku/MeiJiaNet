<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:contentPadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_ac_myentrust_house"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_house_defoult"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_ac_myentrust_housename"
                    android:text="阳光小区"
                    android:textSize="14sp"
                    android:textColor="@color/import_color"
                    android:layout_marginLeft="15dp"
                    android:layout_alignTop="@id/iv_ac_myentrust_house"
                    android:layout_toRightOf="@id/iv_ac_myentrust_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_ac_myentrust_price"
                    android:text="¥200万"
                    android:textSize="20sp"
                    android:textColor="@color/hint_color"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_ac_myentrust_quyu"
                    android:text="西区"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/normal_color"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_ac_myentrust_house"
                    android:layout_below="@id/tv_ac_myentrust_housename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_ac_myentrust_status"
                    android:text="审核中"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/normal_color"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_ac_myentrust_house"
                    android:layout_below="@id/tv_ac_myentrust_quyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_fangxiaoer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv"
                        android:padding="10dp"
                        android:text="房小二"
                        android:layout_centerInParent="true"
                        android:textColor="@color/import_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv"
                        android:background="@color/hint_color"
                        android:layout_width="50dp"
                        android:layout_height="1dp"/>
                    <View
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv"
                        android:background="@color/hint_color"
                        android:layout_width="50dp"
                        android:layout_height="1dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/riv_ac_myentrust_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@mipmap/icon_defoult"
                        app:riv_corner_radius="120dp"/>
                    <TextView
                        android:id="@+id/tv_ac_myentrust_name"
                        android:text="师瑞东"
                        android:textSize="14sp"
                        android:textColor="@color/import_color"
                        android:layout_marginLeft="15dp"
                        android:layout_alignTop="@id/riv_ac_myentrust_icon"
                        android:layout_toRightOf="@id/riv_ac_myentrust_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_ac_myentrust_address"
                        android:text="服务区域：衢州"
                        android:textSize="12sp"
                        android:textColor="@color/hint_color"
                        android:layout_marginLeft="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@id/tv_ac_myentrust_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_ac_myentrust_phone"
                        android:text="手机：18310099999"
                        android:textSize="12sp"
                        android:textColor="@color/normal_color"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/riv_ac_myentrust_icon"
                        android:layout_alignBottom="@id/riv_ac_myentrust_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_phone"
                        android:padding="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@id/riv_ac_myentrust_icon"
                        android:src="@mipmap/icon_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>