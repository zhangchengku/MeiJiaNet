<?xml version="1.0" encoding="utf-8"?>
<!--房源列表条目-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:orientation="vertical"
                android:background="@color/color_white"
                android:paddingTop="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@mipmap/radio_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_item_fangyuan"
                android:layout_width="125dp"
                android:layout_height="115dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/iv_item_fangyuan">

                <RelativeLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/tv_item_fangyuan_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="52万"
                        android:textColor="@color/normal_color"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_item_fangyuan_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="首府小区0000000000000000"
                        android:layout_toLeftOf="@+id/tv_item_fangyuan_price"
                        android:textColor="@color/import_color"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_item_fangyuan_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="5dp"
                    android:text="四室两厅一卫 · 62"
                    android:textColor="@color/normal_color"/>

                <TextView
                    android:id="@+id/tv_item_fangyuan_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_fangyuan_msg"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/icon_location"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="北京市大兴区"/>

                <RelativeLayout
                    android:id="@+id/rl_item_fangyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_item_tedian"
                        android:padding="5dp"
                        android:text="小高层"
                        android:textColor="@color/zhu_color"/>
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/tv_type"
                        android:layout_marginLeft="30dp"
                        android:drawableLeft="@mipmap/icon_view"
                        android:drawablePadding="5dp"
                        android:text="25"/>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_toRightOf="@id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@mipmap/icon_intention"
                        android:drawablePadding="5dp"
                        android:text="25"/>


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color"/>

</LinearLayout>