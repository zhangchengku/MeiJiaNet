<?xml version="1.0" encoding="utf-8"?>
<!--房源列表条目-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_item_fangyuan"
        android:background="@color/bg_color"
        android:scaleType="centerCrop"
        android:layout_width="125dp"
        android:layout_height="105dp"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_item_fangyuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_weituo_name"
            android:textColor="@color/import_color"
            android:textSize="14sp"
            android:text="首府小区"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_item_weituo_price"
            android:textColor="@color/normal_color"
            android:textSize="18sp"
            android:text="52万"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_weituo_quyu"
        android:layout_marginTop="10dp"
        android:text="西区"
        android:layout_toRightOf="@id/iv_item_fangyuan"
        android:layout_alignLeft="@id/ll"
        android:layout_below="@id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_weituo_status"
        android:layout_marginTop="10dp"
        android:text="已审核"
        android:layout_toRightOf="@id/iv_item_fangyuan"
        android:layout_alignLeft="@id/ll"
        android:layout_below="@id/tv_item_weituo_quyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_item_weituo_look"
        android:background="@drawable/bg_look"
        android:layout_marginTop="10dp"
        android:text="查看"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignBottom="@id/iv_item_fangyuan"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_below="@id/iv_item_fangyuan"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>