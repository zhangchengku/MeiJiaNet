<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_house_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="meijia.com.meijianet.ui.HouseDetailActivity">
    <LinearLayout
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <meijia.com.meijianet.activity.MyScrollView
            android:id="@+id/my_scroll_view"
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <com.youth.banner.Banner
                        android:id="@+id/iv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_indcator"
                        android:visibility="invisible"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/shape_indcator"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:text="1/3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_ac_housedetail_price"
                        android:text="¥60万"
                        android:layout_gravity="bottom"
                        android:textColor="#ffa64e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_time"
                            android:layout_gravity="bottom"
                            android:gravity="right"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="距结束"
                                android:textColor="@color/normal_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_ac_housedetail_day"
                                android:text="01"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="16sp"
                                android:textColor="@color/import_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="天"
                                android:textColor="@color/normal_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_ac_housedetail_hour"
                                android:text="01"
                                android:textSize="16sp"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textColor="@color/import_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="时"
                                android:textColor="@color/normal_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_ac_housedetail_minute"
                                android:text="01"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="16sp"
                                android:textColor="@color/import_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="分"
                                android:textColor="@color/normal_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tv_ac_housedetail_second"
                                android:text="01"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="3dp"
                                android:textSize="16sp"
                                android:textColor="@color/import_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="秒"
                                android:textColor="@color/normal_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_status"
                            android:visibility="invisible"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="bottom"
                            android:text="已售"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="15dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_ac_housedetail_title"
                        android:text=""
                        android:maxLines="2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_ac_housedetail_map"
                        android:layout_gravity="bottom"
                        android:drawableLeft="@mipmap/details_icon_map_default"
                        android:textColor="@color/zhu_color"
                        android:text="地图"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="房源信息"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv"
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>

                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv"
                            android:layout_marginRight="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:id="@+id/view_center"
                            android:layout_centerHorizontal="true"
                            android:layout_width="1dp"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_huxing"
                            android:text="户型：一室一厅一卫"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_zhuangxiu"
                            android:text="装修：毛坯"
                            android:textColor="@color/hint_color"
                            android:layout_toRightOf="@id/view_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_ac_housedetail_type"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_huxing"
                            android:text="房屋类型：小高楼"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_mianji"
                            android:text="面积：95平米"
                            android:textColor="@color/hint_color"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_huxing"
                            android:layout_toRightOf="@id/view_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_ac_housedetail_floor"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_type"
                            android:text="楼层：9楼（共100楼）"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_fangxiang"
                            android:text="朝向：南北通透"
                            android:textColor="@color/hint_color"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_type"
                            android:layout_toRightOf="@id/view_center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_ac_housedetail_address"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_floor"
                            android:text="地址：大兴区亦庄"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv2"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="房源描述"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv2"
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>

                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv2"
                            android:layout_marginRight="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>
                    </RelativeLayout>

                    <TextView
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:id="@+id/tv_ac_housedetail_miaoshu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv3"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="户型图"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv3"
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>

                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv3"
                            android:layout_marginRight="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <TextView
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:id="@+id/tv_ac_housedetail_huxingtu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv4"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="业务要求"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv4"
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>

                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv4"
                            android:layout_marginRight="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <TextView
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:id="@+id/tv_ac_housedetail_yewuyaoqiu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/bg_color"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv5"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:text="税费 贷款"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv5"
                            android:layout_marginLeft="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>

                        <View
                            android:background="@color/normal_color"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/tv5"
                            android:layout_marginRight="10dp"
                            android:layout_width="60dp"
                            android:layout_height="1dp"/>
                    </RelativeLayout>
                    <TextView
                        android:paddingLeft="15dp"
                        android:text="注：以下税率仅供参考，实际以政府缴纳为准"
                        android:textColor="@color/hint_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:id="@+id/view_center2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="1dp"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_qishui"
                            android:text="契税：1%（首套）"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_personshui"
                            android:text="个人所得税：1%"
                            android:textColor="@color/hint_color"
                            android:layout_toRightOf="@id/view_center2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_ac_housedetail_zengzhishui"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_qishui"
                            android:text="增值税：5.6%"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_ac_housedetail_gongbenfei"
                            android:text="工本费：95元"
                            android:textColor="@color/hint_color"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_qishui"
                            android:layout_toRightOf="@id/view_center2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/tv_ac_housedetail_daikuan"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_ac_housedetail_zengzhishui"
                            android:text="银行最高贷款金额：100万"
                            android:textColor="@color/hint_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_ac_housedetail_jisuanqi"
                        android:textColor="@color/zhu_color"
                        android:text="贷款计算器"
                        android:drawableLeft="@mipmap/icon_chexianjisuanqi"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </meijia.com.meijianet.activity.MyScrollView>
        <LinearLayout
            android:id="@+id/ll_shouchang_pay"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:id="@+id/rl_ac_housedetail_shoucang"
                android:background="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_ac_housedetail_shoucang"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/details_icon_collect_default"
                    android:layout_centerInParent="true"
                    android:text="收藏"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_ac_housedetail_pay"
                android:background="@color/zhu_color"
                android:textColor="@color/white"
                android:layout_weight="2"
                android:text="缴纳意向金"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:background="@color/colorTransparent"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="5dp"
            android:src="@mipmap/details_icon_return_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@mipmap/details_icon_share_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
