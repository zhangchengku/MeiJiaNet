<?xml version="1.0" encoding="utf-8"?>
<!--房源列表条目-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
   >

    <ImageView
        android:layout_marginTop="@dimen/view_size_15"
        android:id="@+id/iv_item_fangyuan"
        android:layout_width="@dimen/view_size_124"
        android:layout_height="@dimen/view_size_92"
        android:layout_marginLeft="@dimen/view_size_6"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/view_size_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size_92"
        android:layout_marginLeft="@dimen/view_size_10"
        android:layout_marginRight="@dimen/view_size_6"
        android:layout_toRightOf="@id/iv_item_fangyuan">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_fangyuan_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="首府小区"
                android:textColor="@color/import_color"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/view_size_6"
            android:layout_below="@id/ll"
            android:id="@+id/ll2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_fangyuan_msg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/text_size_11"
                android:layout_height="wrap_content"
                android:text="四室两厅一卫 . 62"
                android:textColor="#999999"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_fangyuan_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll2"
            android:layout_marginTop="@dimen/view_size_6"
            android:drawableLeft="@mipmap/icon_location"
            android:ellipsize="end"
            android:maxLines="1"
            android:drawablePadding="@dimen/view_size_5"
            android:textSize="@dimen/text_size_11"
            android:textColor="#999999"
            android:text="北京市大兴区"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/rl_item_fangyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_item_fangyuan_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textSize="17sp"
                    android:textColor="#F44848"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万元"
                    android:textSize="11sp"
                    android:textColor="#333333"/>
            </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/iv_item_fangyuan"
        android:layout_marginTop="10dp"
        android:background="@color/bg_item"/>
</RelativeLayout>