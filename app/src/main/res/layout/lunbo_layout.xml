<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_203">
                <com.donkingliang.banner.CustomBanner
                    android:id="@+id/iv_fm_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:indicatorInterval="5dp"
                    app:indicatorSelectRes="@drawable/landian"
                    app:indicatorStyle="ORDINARY"
                    app:indicatorUnSelectRes="@drawable/baidian" />
            </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/re"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>


            <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                android:layout_marginRight="@dimen/view_size_6"
                android:layout_marginLeft="@dimen/view_size_6"
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_186"/>
            <RelativeLayout
                android:layout_marginRight="@dimen/view_size_6"
                android:layout_marginLeft="@dimen/view_size_6"
                android:background="@color/color_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size_50"
              >
                <TextView
                    android:layout_marginLeft="@dimen/view_size_6"
                    android:layout_centerVertical="true"
                    android:textColor="@color/import_color"
                    android:drawablePadding="9dp"
                    android:drawableLeft="@mipmap/shape_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最新房源"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_marginRight="@dimen/view_size_6"
                    android:id="@+id/tv_fm_first_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="更多"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:drawableRight="@mipmap/iicon_enter"
                    android:drawablePadding="5dp"
                    android:textColor="#999999"
                    android:textSize="12sp"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>