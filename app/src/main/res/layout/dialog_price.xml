<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view_cover"
        android:background="#77777777"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:background="@color/color_white"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="20dp"
            android:text="计价规则"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#303030"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_price_cartype"
            android:layout_marginTop="25dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="北汽EV160（经济型）"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_price_time"
            android:layout_marginTop="20dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="水电费水电费"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_price_licheng"
            android:layout_marginTop="20dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="士大夫撒地方"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dialog_price_baoxian"
            android:layout_marginTop="20dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="阿斯顿发送到"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_price_yuyue"
            android:layout_marginTop="20dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="阿斯蒂芬斯蒂芬"
            android:gravity="left"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="20dp"
            android:background="#a0a0a0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/tv_dialog_dingche_ok"
            android:text="知道了"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>